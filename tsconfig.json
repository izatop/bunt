{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "lib": ["ES2021"],
        "strict": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
