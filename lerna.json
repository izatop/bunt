{
    "packages": [
        "packages/*"
    ],
    "command": {
        "version": {
            "allowBranch": "master"
        },
        "publish": {
            "ignoreChanges": [
                "*.md",
                "packages/test/**"
            ],
            "conventionalCommits": true,
            "noCommitHooks": true,
            "noChangelog": true,
            "yes": true
        }
    },
    "stream": true,
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "0.3.0"
}
