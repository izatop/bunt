{
    "name": "typesafeunit",
    "version": "0.1.0",
    "description": "TypesafeUnit, the type safe application unit",
    "main": "index.js",
    "scripts": {
        "clean": "lerna run clean",
        "lint": "eslint 'packages/*/{src,test}/**/*.ts'",
        "build": "yarn && yarn run clean && tsc -b packages",
        "build:watch": "tsc -b packages -w",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "release": "lerna publish",
        "ci": "yarn lint && yarn build && yarn test"
    },
    "workspaces": [
        "packages/*"
    ],
    "repository": "git@github.com:izatop/typesafeunit.git",
    "author": "Artur Bier <izatop@gmail.com>",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.2",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lerna": "^3.20.2",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.3"
    }
}
