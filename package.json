{
  "name": "bunt",
  "version": "0.1.0",
  "description": "TypeSafe unit style Application Framework written in TypeScript for Node.js.",
  "main": "index.js",
  "scripts": {
    "test": "./ci/run-tests $@",
    "test:watch": "yarn test --watch",
    "clean": "rimraf -g 'packages/*/dist'",
    "lint": "eslint 'packages/*/{src,test}/**/*.ts'",
    "build": "tsc -b packages/tsconfig.json",
    "build:esm": "tsc -b packages/tsconfig.esm.json",
    "watch": "tsc -b packages -w"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": "git@github.com:izatop/bunt.git",
  "author": "Artur Bier <izatop@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "lerna": "^6.6.2"
  }
}
